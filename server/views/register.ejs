                            <label for="password"> Password</label><br>
                            <input
                                style="width: 1075px; height: 45px; border-style: ridge 0.1rem; color: black; margin-bottom: 20px;"
                                type="password" id="password" name="password" required minlength="3" maxlength="10">

                            <label for="password"><i></i> Retype-Password</label><br>
                            <input
                                style="width: 1075px; height: 45px; border-style: ridge 0.1rem; color: black;  margin-bottom: 20px;"
                                type="password" id="pass1" required minlength="3" maxlength="10">
                            <span id="check3" style="color: red;"></span>

                            <label for="address"><i class="fa fa-address-card-o"></i> Address</label>
                            <input style="color: black;" type="text" id="address" name="address" required minlength="3"
                                maxlength="10">

                            <label for="phone"><i></i> Phone number</label>
                            <input style="color: black;" type="text" id="phone" name="phone" required minlength="10"
                                maxlength="11">

