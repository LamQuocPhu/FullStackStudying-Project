    <h2 class="titlepage">Register Form</h2>
    <div class="row11">
        <div class="col-75">
            <div class="container">
                <form method="post" action="register_success">
                    <div class="row11">
                        <div class="col-50">
                            <h3>Information</h3>
                            <label for="fname"><i class="fa fa-user"></i> Full Name</label>
                            <input style="color: black;" type="text" id="username" name="username" required
                                minlength="3" maxlength="10">

                            <label for="email"><i class="fa fa-envelope"></i> Email</label>
                            <input style="color: black;" type="text" id="email" name="email" required minlength="3"
